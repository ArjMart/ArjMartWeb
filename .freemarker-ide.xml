<config>
	<context-values>
		<resource path="WebContent/WEB-INF/freemarker/search.ftl">
			<value key="items" object-class="java.util.List" item-class="com.arjvik.arjmart.api.item.Item"/>
		</resource>
		<resource path="WebContent/WEB-INF/freemarker/past-orders.ftl">
			<value key="orders" object-class="java.util.List" item-class="com.arjvik.arjmart.api.order.Order"/>
		</resource>
		<resource path="WebContent/WEB-INF/freemarker/cart.ftl">
			<value key="total" object-class="com.arjvik.arjmart.api.order.OrderTotal"/>
			<value key="cart" object-class="java.util.List" item-class="com.arjvik.arjmart.web.SuperOrderLine"/>
		</resource>
		<resource path="WebContent/WEB-INF/freemarker/checkout.ftl">
			<value key="total" object-class="com.arjvik.arjmart.api.order.OrderTotal"/>
			<value key="creditCard" object-class="java.lang.String"/>
		</resource>
		<resource path="WebContent/WEB-INF/freemarker/order-status.ftl">
			<value key="total" object-class="com.arjvik.arjmart.api.order.OrderTotal"/>
			<value key="orderLines" object-class="java.util.List" item-class="com.arjvik.arjmart.web.SuperOrderLine"/>
			<value key="order" object-class="com.arjvik.arjmart.api.order.Order"/>
		</resource>
		<resource path="WebContent/WEB-INF/freemarker/account.ftl">
			<value key="user" object-class="com.arjvik.arjmart.api.user.User"/>
		</resource>
		<resource path="WebContent/WEB-INF/freemarker/edit-quantity.ftl">
			<value key="orderLine" object-class="com.arjvik.arjmart.web.SuperOrderLine"/>
		</resource>
		<resource path="WebContent/WEB-INF/freemarker/add-to-cart.ftl">
			<value key="item" object-class="com.arjvik.arjmart.api.item.Item"/>
			<value key="orderLine" object-class="com.arjvik.arjmart.api.order.OrderLine"/>
			<value key="itemAttribute" object-class="com.arjvik.arjmart.api.item.ItemAttribute"/>
		</resource>
		<resource path="WebContent/WEB-INF/freemarker/item.ftl">
			<value key="item" object-class="com.arjvik.arjmart.api.item.Item"/>
		</resource>
		<resource path="WebContent/WEB-INF/freemarker/checkout-failed.ftl">
			<value key="error" object-class="java.lang.String"/>
		</resource>
	</context-values>
	<macro-library>
	</macro-library>
</config>