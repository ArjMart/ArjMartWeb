<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>ArjMartWeb</display-name>
  <filter>
    <filter-name>Jersey Web Application</filter-name>
    <filter-class>org.glassfish.jersey.servlet.ServletContainer</filter-class>
    <init-param>
      <param-name>javax.ws.rs.Application</param-name>
      <param-value>com.arjvik.arjmart.web.ResourceConfig</param-value>
    </init-param>
    <init-param>
      <param-name>jersey.config.server.mvc.templateBasePath.jsp</param-name>
      <param-value>/WEB-INF/jsp</param-value>
    </init-param>
    <init-param>
      <param-name>jersey.config.server.mvc.templateBasePath.freemarker</param-name>
      <param-value>/WEB-INF/freemarker</param-value>
    </init-param>
    <init-param>
      <param-name>jersey.config.servlet.filter.staticContentRegex</param-name>
      <param-value>
				(/(image|js|css|resources|debug)/?.*)|(/.*.(html|jsp))|
				(/favicon.ico)|(/robots.txt)
			</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>Jersey Web Application</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <!-- DEBUG -->
  <servlet>
    <servlet-name>DebugSessionServlet</servlet-name>
    <servlet-class>com.arjvik.arjmart.web.debug.DebugSessionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DebugSessionServlet</servlet-name>
    <url-pattern>/debug/sessions</url-pattern>
  </servlet-mapping>
  <listener>
      <listener-class>com.arjvik.arjmart.web.debug.DebugSessionServlet</listener-class>
  </listener>
</web-app>